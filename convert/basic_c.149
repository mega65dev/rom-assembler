rwindow          jsr chkcls                               
                 jsr conint                               
                 cpx #2                                   
                 beq _local_1148_50                       ; return current console
                 +lbcs fcerr                              

                 cpx #0                                   
                 bne _local_1148_10                       

                 lda _screen_bottom                       
                 sec                                      
                 sbc _screen_top                          
                 bra _local_1148_60                       ; always

_local_1148_10   lda _screen_right                        
                 sec                                      
                 sbc _screen_left                         
                 bra _local_1148_60                       ; always


_local_1148_50   lda #80                                  ; assume 80 col
                 bbr7 _mode,_local_1148_60                
                 lsr                                      
_local_1148_60   tay                                      
                 +lbra sngflt                             ; float 1 byte arg in .Y

