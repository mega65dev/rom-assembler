rwindow         jsr chkcls                              
                jsr conint                              
                cpx #2                                  
                beq l149_2                              ; return current console
                +lbcs fcerr                             

                cpx #0                                  
                bne l149_1                              

                lda _screen_bottom                      
                sec                                     
                sbc _screen_top                         
                bra l149_3                              ; always

l149_1          lda _screen_right                       
                sec                                     
                sbc _screen_left                        
                bra l149_3                              ; always


l149_2          lda #80                                 ; assume 80 col
                bbr7 _mode,l149_3                       
                lsr                                     
l149_3          tay                                     
                +lbra sngflt                            ; float 1 byte arg in .Y

;.end
